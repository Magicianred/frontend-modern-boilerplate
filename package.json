{
    "name": "webpack-modern-boilerplate",
    "version": "0.0.1",
    "description": "Boilerplate to start projects from scratch with React and Webpack 4",
    "main": "app/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/ibbatta/webpack-modern-boilerplate.git"
    },
    "bugs": {
        "url": "https://github.com/ibbatta/webpack-modern-boilerplate/issues"
    },
    "author": "Maurizio Battaghini <maurizio.battaghini@gmail.com>",
    "license": "MIT",
    "private": true,
    "engines": {
        "node": ">= 9.10.x",
        "yarn": ">= 1.9.x",
        "npm": ">= 6.3.x"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 10"
    ],
    "scripts": {
        "start": "NODE_ENV=production webpack -p",
        "start:dev": "NODE_ENV=development webpack-dev-server -d --profile",
        "analyze": "webpack-dashboard -- webpack-dev-server",
        "test": "jest"
    },
    "dependencies": {
        "prop-types": "^15.6.2",
        "react": "^16.4.2",
        "react-dom": "^16.4.2",
        "react-router": "^4.3.1"
    },
    "devDependencies": {
        "@babel/core": "^7.3.4",
        "@babel/plugin-transform-runtime": "^7.3.4",
        "@babel/preset-env": "^7.3.4",
        "@babel/preset-react": "^7.0.0",
        "@babel/register": "^7.0.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.1.0",
        "babel-loader": "^8.0.5",
        "clean-webpack-plugin": "^1.0.1",
        "copy-webpack-plugin": "^5.0.0",
        "css-loader": "^2.1.0",
        "enzyme": "^3.6.0",
        "enzyme-adapter-react-16": "^1.5.0",
        "enzyme-to-json": "^3.3.4",
        "eslint": "^5.14.1",
        "eslint-config-airbnb": "17.1.0",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-jsx-a11y": "^6.0.3",
        "eslint-plugin-react": "^7.9.1",
        "handlebars-loader": "^1.7.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^1.3.1",
        "jest": "^24.1.0",
        "lint-staged": "^8.1.3",
        "mini-css-extract-plugin": "^0.5.0",
        "node-sass": "^4.9.2",
        "postcss-clean": "^1.1.0",
        "postcss-import": "^12.0.0",
        "postcss-loader": "^3.0.0",
        "postcss-preset-env": "^6.5.0",
        "postcss-url": "^8.0.0",
        "react-test-renderer": "^16.5.1",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "uglifyjs-webpack-plugin": "^2.1.2",
        "url-loader": "^1.0.1",
        "webpack": "^4.16.5",
        "webpack-cli": "^3.1.0",
        "webpack-dashboard": "^3.0.0",
        "webpack-dev-server": "^3.1.5",
        "webpack-md5-hash": "^0.0.6",
        "workbox-webpack-plugin": "^4.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && yarn test"
        }
    },
    "jest": {
        "bail": true,
        "verbose": true,
        "collectCoverage": true,
        "collectCoverageFrom": [
            "__tests__/components/**/*.{test,spec}.{js,jsx}",
            "app/**/*.{test,spec}.{js,jsx}",
            "!<rootDir>/node_modules/",
            "!<rootDir>/path/to/dir/"
        ],
        "coverageDirectory": "<rootDir>/__tests__/coverage",
        "setupFilesAfterEnv": [
            "<rootDir>/__tests__/setup/setupEnzyme.js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "moduleDirectories": [
            "node_modules",
            "app"
        ],
        "testPathIgnorePatterns": [
            "<rootDir>/__tests__/setup/",
            "<rootDir>/__tests__/coverage",
            "<rootDir>/node_modules"
        ]
    }
}
